{
  "name": "@ryanwilke/feather-css",
  "version": "1.1.7",
  "license": "MIT",
  "main": "src/assets/feather.sass",
  "files": [
    "dist"
  ],
  "keywords": [
    "ui",
    "css",
    "sass",
    "styles",
    "design",
    "framework",
    "library"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanwilke/feather-css.git"
  },
  "bugs": {
    "url": "https://github.com/ryanwilke/feather-css/issues"
  },
  "devDependencies": {
    "node-sass": "^4.9.3"
  },
  "scripts": {
    "build": "yarn build:folders && yarn build:css && yarn build:sass",
    "build:css": "yarn sass --output-style compressed src/feather.sass > dist/css/feather.css",
    "build:sass": "cp -R src dist/sass",
    "build:folders": "mkdir -p dist && mkdir -p dist/css",
    "publish": "yarn build && npm publish",
    "sass": "node_modules/.bin/node-sass"
  }
}
